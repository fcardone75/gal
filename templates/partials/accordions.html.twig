<div class="accordion" id="{{ accordionId }}">
    {% for itemIndex, item in accordions %}
        {% set headingId = "heading-#{accordionId}-#{itemIndex}" %}
        {% set collapseId = "collapse-#{accordionId}-#{itemIndex}" %}
        <div class="card">
            <div class="card-header" id="{{ headingId }}">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-bs-toggle="collapse" data-bs-target="#{{ collapseId }}" aria-controls="{{ collapseId }}">
                        {{ item.title }}
                    </button>
                </h2>
            </div>
            <div id="{{ collapseId }}" class="accordion-collapse collapse {% if itemIndex == 0 %}show{% endif %}" aria-labelledby="{{ headingId }}" data-bs-parent="#{{ accordionId }}">
                <div class="card-body">
                    <div class="field-id">
                        <div class="content-panel">
                            <div class="content-panel-body without-header without-footer without-padding">
                                <dl class="datalist">
                                    {% for fieldIndex, field in item.fields %}
                                        <div class="data-row {% if fieldIndex % 2 == 0 %}with-background{% endif %} field-text">
                                            <dd>
                                                {{ field.label }}
                                            </dd>
                                            <dt>
                                                {{ field.value }}
                                            </dt>
                                        </div>
                                    {% endfor %}
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
